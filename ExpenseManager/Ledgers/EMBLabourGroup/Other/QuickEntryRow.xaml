<UserControl x:Class="ExpenseManager.Ledgers.EMBLabourGroup.Other.QuickEntryRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GlobalLib.Views.Controls;assembly=GlobalLib"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <local:CustomComboBox Name="NameCombo" Margin="2.5" FontSize="20" FontFamily="Bahnschrift"/>
        <TextBox Name="NoteBx" Grid.Column="1" Margin="2.5" VerticalContentAlignment="Center" FontSize="20" Padding="5" FontFamily="Bahnschrift"/>
        <TextBox Name="AmountBx" Grid.Column="2" Margin="2.5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" FontFamily="Consolas" Padding="5"/>
    </Grid>
</UserControl>
