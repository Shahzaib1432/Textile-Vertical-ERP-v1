<Window x:Class="MachineOperation.Models.Custom.Windows.LotColorSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Title="LotColorSelection" Height="450" Width="800">

    <Border BorderBrush="Black" BorderThickness="1" Grid.RowSpan="2" Padding="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Viewbox VerticalAlignment="Top" MaxWidth="200">
                <StackPanel x:Name="LotColorsCont" Orientation="Vertical">
                    <!-- Lot Colors Container... -->
                </StackPanel>
            </Viewbox>

            <Button Grid.Row="1" Content="X" 
                    Foreground="White" 
                    Background="Red" BorderBrush="Brown" 
                    FontSize="30" Click="Button_Click"
                    BorderThickness="2"/>
        </Grid>
    </Border>
</Window>