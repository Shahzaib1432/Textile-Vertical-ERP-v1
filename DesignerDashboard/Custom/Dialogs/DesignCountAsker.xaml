<Window x:Class="DesignerDashboard.Custom.Dialogs.DesignCountAsker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesignerDashboard.Custom.Dialogs"
        mc:Ignorable="d"
        WindowStyle="None"
        BorderThickness="1"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Title="DesignCountAsker" Height="60" Width="100">

    <Viewbox>
        <TextBox TextAlignment="Center" x:Name="TextBox" 
                 VerticalContentAlignment="Center" 
                 BorderThickness="0" 
                 Background="Transparent"
                 Margin="5"
                 HorizontalContentAlignment="Center"/>
    </Viewbox>
</Window>
