<UserControl x:Class="EMBAdminDashboard.Controls.AddInvoiceWindow.ExtraCharges.OtherCharges"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GlobalLib.Views.Controls;assembly=GlobalLib"
             mc:Ignorable="d" Margin="0 0 0 2"
             Background="White"
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:CustomComboBox Name="DescriptionCombo" Grid.Column="0" Margin="0 0 2 0" FontFamily="Yu Gothic Medium" FontSize="15"/>
        <TextBox Name="AmountBx" Grid.Column="4" Margin="0 0 2 0" FontFamily="Yu Gothic Medium" FontSize="15" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="5"/>
    </Grid>
</UserControl>
