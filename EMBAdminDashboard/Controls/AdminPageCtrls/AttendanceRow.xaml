<UserControl x:Class="EMBAdminDashboard.Controls.AdminPageCtrls.AttendanceRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EMBAdminDashboard.Controls.AdminPageCtrls"
             mc:Ignorable="d" BorderBrush="LightGray"
             BorderThickness="0 0 0 1"
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="EmployeeName" Text="Yasir Arafat" VerticalAlignment="Center" Margin="10 5 5 5" FontSize="15" FontFamily="Bahnschrift" TextWrapping="Wrap"/>
        <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1 0 0 0"/>
        <Button Name="AttendanceBtn" Grid.Column="1" Margin="5" Background="Transparent" BorderThickness="0" Click="AttendanceBtn_Click">
            <TextBlock Name="TimeBx" Text="08:30 am" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5 5 10 5" FontSize="15" FontFamily="Consolas"/>
        </Button>
    </Grid>
</UserControl>
