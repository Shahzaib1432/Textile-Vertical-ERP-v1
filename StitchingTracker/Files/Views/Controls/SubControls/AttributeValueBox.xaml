<UserControl x:Class="StitchingTracker.Files.Views.Controls.SubControls.AttributeValueBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StitchingTracker.Files.Views.Controls.SubControls"
             mc:Ignorable="d" 
             Background="WhiteSmoke"
             Padding="2"
             Margin="0 0 0 3"
             d:DesignHeight="50">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" x:Name="LabelColumn"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="AttrNameBl" Text="Label:" VerticalAlignment="Center" Foreground="Black" Grid.Column="0" FontFamily="Arial"/>
        <TextBlock x:Name="AttrValueBl" Text="Value" VerticalAlignment="Center" Margin="10 0 0 0" Foreground="Black" Grid.Column="1"/>
    </Grid>
</UserControl>
