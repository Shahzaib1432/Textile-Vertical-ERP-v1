<UserControl x:Class="ProductionSystem.Controls.FabricRelated.NewFabricRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GlobalLib.Views.Controls;assembly=GlobalLib"
             mc:Ignorable="d" Margin="0 5 0 0"
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="DarkGray" BorderThickness="1" Margin="0 0 2.5 0">
            <TextBlock Name="SerialNumBlk" VerticalAlignment="Center" Foreground="DarkGray" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Text="A32" Margin="0 3 0 0" FontFamily="Bahnschrift"/>
        </Border>
        <local:CustomComboBox Name="ColorCombo" Grid.Column="1" Margin="2.5 0" FontWeight="Light" FontSize="15"/>
        <TextBox Name="GazanaBx" Grid.Column="2" FontFamily="Consolas" Margin="2.5 0 0 0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="5" FontSize="20"/>
    </Grid>
</UserControl>
