<UserControl x:Class="ProductionSystem.Controls.FabricRelated.UsingFabricRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProductionSystem.Controls.FabricRelated"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="SerialNumBlk" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold" Text="A32" Margin="0 2 0 0" FontFamily="Bahnschrift"/>
        <TextBlock Name="ColorBlk" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold" Text="1147" Margin="0 2 0 0" FontFamily="Bahnschrift"/>
        <TextBox Name="GazanaBx" Grid.Column="2" Margin="5 0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="5" FontSize="20"/>
    </Grid>
</UserControl>
