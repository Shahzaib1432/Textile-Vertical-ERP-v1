<UserControl x:Class="GlobalLib.Views.Controls.CustomComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Background="White"
             mc:Ignorable="d" BorderBrush="DarkGray"
             BorderThickness="1"
             d:DesignHeight="50" d:DesignWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <TextBox x:FieldModifier="public" x:Name="TextboxCtrl" Padding="5" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent"/>
        <Button x:FieldModifier="public" x:Name="DropDownBtn" Grid.Column="1" Content="▼" Foreground="Gray" BorderThickness="0" Padding="5 0 5 0" FontSize="12" Background="Transparent"/>
    </Grid>
</UserControl>
