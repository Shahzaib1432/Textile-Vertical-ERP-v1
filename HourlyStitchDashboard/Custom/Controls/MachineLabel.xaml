<UserControl x:Class="HourlyStitchDashboard.Custom.Controls.MachineLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HourlyStitchDashboard.Custom.Controls"
             mc:Ignorable="d" 
             Background="White"
             Height="150" Width="50">

    <Button Background="White" BorderThickness="0 0 1 0" BorderBrush="Black" x:Name="MachineBtn">
        <Grid>
            <Viewbox>
                <TextBlock x:Name="MachineName" 
                       VerticalAlignment="Center" 
                       Text="M1" 
                       Margin="5"
                       HorizontalAlignment="Center"/>
            </Viewbox>
        </Grid>
    </Button>
</UserControl>
