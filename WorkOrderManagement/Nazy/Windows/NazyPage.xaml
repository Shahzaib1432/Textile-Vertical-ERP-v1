<Page x:Class="WorkOrderManagement.Nazy.Windows.NazyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NazyPage">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible">
            <WrapPanel x:Name="WorkOrdersCont">
                <Button x:Name="AddOrderBtn" Content="+" FontSize="50" FontWeight="ExtraBold"
                        Margin="5" Padding="30 0 30 15" Background="WhiteSmoke" Foreground="DarkGray"/>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
