<UserControl x:Class="EMBOrderManagement.Controls.SubControls.DemandWindow.DemandRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GlobalLib.Views.Controls;assembly=GlobalLib"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width=".5*"/>
            <ColumnDefinition Width=".5*"/>
        </Grid.ColumnDefinitions>

        <local:CustomComboBox Name="AccTypeCombo" Grid.Column="0" Margin="2.5" FontSize="20" FontFamily="Bahnschrift" FontWeight="Light"/>
        <local:CustomComboBox Name="DesCombo" Grid.Column="1" Margin="2.5" FontSize="20" FontFamily="Bahnschrift" FontWeight="Light"/>
        <TextBox Name="QuantityBx" Grid.Column="2" Margin="2.5" FontSize="20" FontFamily="Consolas" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <local:CustomComboBox Name="UnitCombo" Grid.Column="3" Margin="2.5" FontSize="20" FontFamily="Bahnschrift" FontWeight="Light"/>
    </Grid>
</UserControl>
