<Page x:Class="MachineManagement.Models.ViewModels.PageNumber.EntryNumber.EntryNumPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MachineManagement.Models.ViewModels.PageNumber.EntryNumber"
      mc:Ignorable="d" 
      FontFamily="AgencyFB"
      d:DesignHeight="300" d:DesignWidth="2590"
      Title="EntryNumPage"
      >

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="BackButton" Grid.Column="0" >
            <TextBlock Text="«" FontSize="30" FontWeight="Bold"/>
        </Button>

        <ScrollViewer Padding="10" Grid.Column="1" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible">
            <StackPanel x:Name="DesignContainer" Orientation="Horizontal">
                <!-- Container For Designs -->
            </StackPanel>
        </ScrollViewer>

        <Frame Grid.RowSpan="2" Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" x:Name="DesignPage"/>
    </Grid>
</Page>